{
  "compilerOptions": {
    "types": ["node"],
    "module": "commonjs",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": ".",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
