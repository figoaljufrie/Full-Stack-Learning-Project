generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma" // relative to the prisma schema file
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Product {
  id_product Int @id @default(autoincrement())
  title String
  description String
  stock Int
  image String
  price Float
}

model Transaction {
  id_transaction Int @id @default (autoincrement())
  invoice_id String @unique
  cart Json
  payment String

  userId Int
  user User @relation(fields: [userId], references: [id_user])
}

model User {
  id_user Int @id @default (autoincrement())
  email String @unique
  password String @unique

  transaction Transaction[]
}