{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                         
    "module": "CommonJS",                       
    "moduleResolution": "node",                 
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "strict": true,                             
    "skipLibCheck": true,                       

    /* Output */
    "outDir": "./dist",                         
    "rootDir": "./src",                         

    /* Debugging */
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
